<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Wizardry.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Wizardry"
    xmlns:pages="clr-namespace:Wizardry.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="Wizardry">

    <ShellContent
        Title="Database"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Add New Person"
        ContentTemplate="{DataTemplate pages:NewPerson}"
        Route="NewPerson" />

</Shell>
