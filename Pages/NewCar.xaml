<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Wizardry.Pages.NewCar"
             Title="NewCar">
    <VerticalStackLayout>
        <Label 
            Text="Brand"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry
            x:Name="forBrand"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            WidthRequest="200"/>

        <Label 
            Text="Model"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry
            x:Name="forModel"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            WidthRequest="200"/>

        <Label
            Text="Fuel:"
            HorizontalOptions="Center"/>

        <Picker
            x:Name="forFuel"
            WidthRequest="200"/>

        <Label
            Text="Owner:"
            HorizontalOptions="Center"/>

        <Picker
            x:Name="forUser"
            WidthRequest="200"/>

        <Button
            Text="Save"
            HorizontalOptions="Center"
            Clicked="SaveButton_Clicked"/>
    </VerticalStackLayout>
</ContentPage>